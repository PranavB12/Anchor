# Copy this to .env and fill in real values — never commit .env to git

# ── Database ──────────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=anchor_db

# ── JWT ───────────────────────────────────────────────────────────────────────
SECRET_KEY=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Password Reset ────────────────────────────────────────────────────────────
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30

# ── Email (SMTP) ──────────────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=no-reply@anchor.app
EMAILS_FROM_NAME=Anchor

# ── OAuth (Google) ────────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ── AWS S3 ────────────────────────────────────────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=anchor-avatars

# ── Dev ───────────────────────────────────────────────────────────────────────
DEBUG=true